<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.taluer.taluerdemo.MainActivity">

    <LinearLayout
        android:id="@+id/or_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/data_ed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:ems="10"
            android:inputType="textPersonName"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:onClick="onSendClick"
            android:text="发送"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/can_cotent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/spacer_medium"
            android:orientation="horizontal"
            android:showDividers="middle|beginning|end"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                style="@style/can_content_style">

                <TextView
                    style="@style/can_text_view_style"
                    android:text="ID"/>

                <EditText
                    android:id="@+id/id_ed"
                    style="@style/can_ed_style"
                    android:maxLength="8"/>

            </LinearLayout>

            <LinearLayout
                style="@style/can_content_style">

                <TextView
                    style="@style/can_text_view_style"
                    android:text="Data1"/>

                <EditText
                    android:id="@+id/data1_ed"
                    style="@style/can_ed_style"
                    android:maxLength="2"/>

            </LinearLayout>

            <LinearLayout
                style="@style/can_content_style">

                <TextView
                    style="@style/can_text_view_style"
                    android:text="Data2"/>

                <EditText
                    android:id="@+id/data2_ed"
                    style="@style/can_ed_style"
                    android:maxLength="2"/>

            </LinearLayout>

            <LinearLayout
                style="@style/can_content_style">

                <TextView
                    style="@style/can_text_view_style"
                    android:text="Data3"/>

                <EditText
                    android:id="@+id/data3_ed"
                    style="@style/can_ed_style"
                    android:maxLength="2"/>

            </LinearLayout>

            <LinearLayout
                style="@style/can_content_style">

                <TextView
                    style="@style/can_text_view_style"
                    android:text="Data4"/>

                <EditText
                    android:id="@+id/data4_ed"
                    style="@style/can_ed_style"
                    android:maxLength="2"/>

            </LinearLayout>

            <LinearLayout
                style="@style/can_content_style">

                <TextView
                    style="@style/can_text_view_style"
                    android:text="Data5"/>

                <EditText
                    android:id="@+id/data5_ed"
                    style="@style/can_ed_style"
                    android:maxLength="2"/>

            </LinearLayout>

            <LinearLayout
                style="@style/can_content_style">

                <TextView
                    style="@style/can_text_view_style"
                    android:text="Data6"/>

                <EditText
                    android:id="@+id/data6_ed"
                    style="@style/can_ed_style"
                    android:maxLength="2"/>

            </LinearLayout>

            <LinearLayout
                style="@style/can_content_style">

                <TextView
                    style="@style/can_text_view_style"
                    android:text="Data7"/>

                <EditText
                    android:id="@+id/data7_ed"
                    style="@style/can_ed_style"
                    android:maxLength="2"/>

            </LinearLayout>

            <LinearLayout
                style="@style/can_content_style">

                <TextView
                    style="@style/can_text_view_style"
                    android:text="Data8"/>

                <EditText
                    android:id="@+id/data8_ed"
                    style="@style/can_ed_style"
                    android:maxLength="2"/>

            </LinearLayout>

            <LinearLayout
                style="@style/can_content_style">

                <TextView
                    style="@style/can_text_view_style"
                    android:text="Len"/>

                <TextView
                    android:id="@+id/len_ed"
                    style="@style/can_text_view_style"
                    android:layout_height="50dp"
                    android:text="08"/>

            </LinearLayout>

            <LinearLayout
                style="@style/can_content_style">

                <TextView
                    style="@style/can_text_view_style"
                    android:text="Format"/>

                <Spinner
                    android:id="@+id/format_sp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:entries="@array/format_array"/>

            </LinearLayout>

            <LinearLayout
                style="@style/can_content_style">

                <TextView
                    style="@style/can_text_view_style"
                    android:text="Type"/>

                <Spinner
                    android:id="@+id/type_sp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:entries="@array/type_array"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onSendClick"
            android:text="发送"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:divider="@drawable/spacer_medium"
        android:orientation="horizontal"
        android:showDividers="middle|beginning|end"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/can_cotent"
        android:id="@+id/linearLayout">

        <LinearLayout
            style="@style/can_content_style">

            <TextView
                style="@style/can_text_view_style"
                android:text="ID"/>

            <TextView
                android:id="@+id/id_tv"
                style="@style/can_ed_style"/>

        </LinearLayout>

        <LinearLayout
            style="@style/can_content_style">

            <TextView
                style="@style/can_text_view_style"
                android:text="Data1"/>

            <TextView
                android:id="@+id/data1_tv"
                style="@style/can_ed_style"/>

        </LinearLayout>

        <LinearLayout
            style="@style/can_content_style">

            <TextView
                style="@style/can_text_view_style"
                android:text="Data2"/>

            <TextView
                android:id="@+id/data2_tv"
                style="@style/can_ed_style"/>

        </LinearLayout>

        <LinearLayout
            style="@style/can_content_style">

            <TextView
                style="@style/can_text_view_style"
                android:text="Data3"/>

            <TextView
                android:id="@+id/data3_tv"
                style="@style/can_ed_style" />
        </LinearLayout>

        <LinearLayout
            style="@style/can_content_style">

            <TextView
                style="@style/can_text_view_style"
                android:text="Data4"/>

            <TextView
                android:id="@+id/data4_tv"
                style="@style/can_ed_style" />

        </LinearLayout>

        <LinearLayout
            style="@style/can_content_style">

            <TextView
                style="@style/can_text_view_style"
                android:text="Data5"/>

            <TextView
                android:id="@+id/data5_tv"
                style="@style/can_ed_style"/>

        </LinearLayout>

        <LinearLayout
            style="@style/can_content_style">

            <TextView
                style="@style/can_text_view_style"
                android:text="Data6"/>

            <TextView
                android:id="@+id/data6_tv"
                style="@style/can_ed_style"/>

        </LinearLayout>

        <LinearLayout
            style="@style/can_content_style">

            <TextView
                style="@style/can_text_view_style"
                android:text="Data7"/>

            <TextView
                android:id="@+id/data7_tv"
                style="@style/can_ed_style"/>

        </LinearLayout>

        <LinearLayout
            style="@style/can_content_style">

            <TextView
                style="@style/can_text_view_style"
                android:text="Data8"/>

            <TextView
                android:id="@+id/data8_tv"
                style="@style/can_ed_style"/>

        </LinearLayout>

        <LinearLayout
            style="@style/can_content_style">

            <TextView
                style="@style/can_text_view_style"
                android:text="Len"/>

            <TextView
                android:id="@+id/len_tv"
                style="@style/can_ed_style"/>
        </LinearLayout>

        <LinearLayout
            style="@style/can_content_style">

            <TextView
                style="@style/can_text_view_style"
                android:text="Format"/>

            <TextView
                android:id="@+id/format_tv"
                style="@style/can_ed_style"/>

        </LinearLayout>

        <LinearLayout
            style="@style/can_content_style">

            <TextView
                style="@style/can_text_view_style"
                android:text="Type"/>

            <TextView
                android:id="@+id/type_tv"
                style="@style/can_ed_style"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/connect_device_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onConnectClick"
            android:text="连接设备"/>

        <Spinner
            android:id="@+id/data_type_sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@android:color/white"
            android:entries="@array/data_type_array" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:columnCount="2">

            <TextView
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:layout_row="0"
                android:text="设备名称："
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/ble_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="28dp"
                android:layout_row="0"
                android:gravity="right"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_row="1"
                android:text="蓝牙地址："
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/ble_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="28dp"
                android:layout_row="1"
                android:gravity="right"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"/>
            <Button
                android:id="@+id/button2"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="control"
                />
            <Button
                android:id="@+id/ctlbtn"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="control"
                 />
        </GridLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
